<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:minHeight">20dp</item>
        <item name="android:maxHeight">20dp</item>

        
    </style>
    <style name="RatingBarColor" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorAccentText</item>
        <item name="colorControlActivated">@color/colorAccentText</item>
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/colorAccentText</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>
    
</resources>